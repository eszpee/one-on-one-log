FROM node:20-slim

WORKDIR /app

# Install http-server globally
RUN npm install -g http-server

# Copy only our static test directory
COPY static-test ./static-test

# Expose the application port
EXPOSE 8888

# Start the http-server with our static test page
CMD ["http-server", "./static-test", "-p", "8888", "--cors", "-a", "0.0.0.0"]
