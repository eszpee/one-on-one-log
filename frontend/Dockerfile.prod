FROM node:20-slim

WORKDIR /app

# Install http-server globally
RUN npm install -g http-server

# Copy our static test files
COPY static-test ./static-test

# Expose the application port
EXPOSE 8888

# Start a simple HTTP server to serve the static test files
CMD ["http-server", "./static-test", "-p", "8888", "--cors", "-a", "0.0.0.0"]
